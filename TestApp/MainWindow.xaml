<Window
    x:Class="TestApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hex="clr-namespace:HexControls;assembly=HexControls"
    xmlns:local="clr-namespace:TestApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="600"
    Height="350"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStyle="None">
    <Border
        Background="#222222"
        BorderThickness="0"
        CornerRadius="10">
        <StackPanel>
            <hex:HexTextBox
                x:Name="HexTextBoxA"
                Width="200"
                Height="60"
                Margin="10"
                FocusBorderBrush="#FF7F00"
                Background="#333333"
                BorderBrush="#555555"
                BorderThickness="2"
                CornerRadius="5"
                FontFamily="Segoe"
                FontSize="24"
                Foreground="#CCCCCC"
                Label="Nome"
                LabelFontSize="14" />
            <hex:HexTextBox
                x:Name="HexTextBoxB"
                Width="200"
                Height="60"
                FocusBorderBrush="#FF7F00"
                Background="#333333"
                BorderBrush="#555555"
                BorderThickness="2"
                CornerRadius="5"
                FontFamily="Segoe"
                FontSize="24"
                Foreground="#CCCCCC"
                Label="Sobrenome"
                LabelFontSize="14" />
        </StackPanel>
    </Border>
</Window>
