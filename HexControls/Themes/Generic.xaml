<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:HexControls">

    <Style TargetType="{x:Type local:HexTextBox}">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:HexTextBox}">
                    <Border
                        x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label
                                x:Name="Part_Label"
                                Height="20"
                                Padding="5,0,0,0"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Content="{TemplateBinding Label}"
                                FontSize="{TemplateBinding LabelFontSize}"
                                Foreground="{TemplateBinding Foreground}" />

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button
                                    x:Name="Part_CopyButton"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontSize="{TemplateBinding FontSize}"
                                    Foreground="{TemplateBinding Foreground}"
                                    IsTabStop="False">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ShowCopyButton, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ShowCopyButton, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Canvas
                                                Width="20"
                                                Height="20"
                                                Background="{TemplateBinding Background}">
                                                <Path
                                                    x:Name="Part_FrontPage"
                                                    Canvas.Left="6.5"
                                                    Canvas.Top="3.5"
                                                    Data="M3 10C2 10 1 9 1 8V3C1 2 2 1 3 1H6C7 1 8 2 8 3L8 8C8 9 7 10 6 10H3Z"
                                                    Stroke="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}"
                                                    StrokeThickness="2" />
                                                <Path
                                                    x:Name="Part_BackPage"
                                                    Canvas.Left="4.5"
                                                    Canvas.Top="5.5"
                                                    Data="M8 7C8 7 8 7.5 8 8C8 9 7 10 6 10C5 10 5 10 3 10C2 10 1 9 1 8C1 6.5 1 4.5 1 3C1 2 2 1 3 1"
                                                    Stroke="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}"
                                                    StrokeThickness="2" />
                                            </Canvas>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="Part_FrontPage" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                    <Setter TargetName="Part_BackPage" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button
                                    x:Name="Part_InfoButton"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontSize="{TemplateBinding FontSize}"
                                    Foreground="{TemplateBinding Foreground}"
                                    IsTabStop="False">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding InfoText, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding InfoText, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Canvas
                                                    Width="20"
                                                    Height="20"
                                                    Background="{TemplateBinding Background}">
                                                    <Ellipse
                                                        x:Name="Part_O"
                                                        Canvas.Left="9"
                                                        Canvas.Top="4"
                                                        Width="2"
                                                        Height="2"
                                                        Stroke="{TemplateBinding BorderBrush}"
                                                        StrokeThickness="2" />
                                                    <Path
                                                        x:Name="Part_I"
                                                        Canvas.Left="8.5"
                                                        Canvas.Top="8"
                                                        Data="M 0,0 H 1.5 V 7"
                                                        Stroke="{TemplateBinding BorderBrush}"
                                                        StrokeStartLineCap="Round"
                                                        StrokeThickness="2" />
                                                    <Path
                                                        x:Name="Part__"
                                                        Canvas.Left="7.5"
                                                        Canvas.Top="15"
                                                        Data="M 0,0 H 5"
                                                        Stroke="{TemplateBinding BorderBrush}"
                                                        StrokeEndLineCap="Round"
                                                        StrokeStartLineCap="Round"
                                                        StrokeThickness="2" />
                                                </Canvas>
                                                <Popup
                                                    x:Name="Part_Popup"
                                                    AllowsTransparency="True"
                                                    Placement="Custom"
                                                    PlacementTarget="{Binding RelativeSource={RelativeSource AncestorType=local:HexTextBox}}"
                                                    StaysOpen="True">
                                                    <Border
                                                        Padding="10,5,10,5"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}"
                                                        BorderThickness="{Binding BorderThickness, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}"
                                                        CornerRadius="5">
                                                        <TextBlock
                                                            FontSize="{TemplateBinding FontSize}"
                                                            Foreground="{TemplateBinding Foreground}"
                                                            Text="{Binding InfoText, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Part_Popup" Property="IsOpen" Value="True" />
                                                    <Setter TargetName="Part_O" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                    <Setter TargetName="Part_I" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                    <Setter TargetName="Part__" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="False">
                                                    <Setter TargetName="Part_Popup" Property="IsOpen" Value="False" />
                                                    <Setter TargetName="Part_O" Property="Stroke" Value="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                    <Setter TargetName="Part_I" Property="Stroke" Value="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                    <Setter TargetName="Part__" Property="Stroke" Value="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>

                            <TextBox
                                x:Name="Part_TextBox"
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Margin="10,2,10,5"
                                VerticalAlignment="Bottom"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                CaretBrush="{TemplateBinding Foreground}"
                                Foreground="{TemplateBinding Foreground}"
                                IsReadOnly="{TemplateBinding IsReadOnly}"
                                Text="{TemplateBinding Text}" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>

                        <Trigger Property="IsKeyboardFocusWithin" Value="False">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="{Binding BorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:HexPasswordBox}">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:HexPasswordBox}">
                    <Border
                        x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Label
                                x:Name="Part_Label"
                                Height="20"
                                Padding="5,0,0,0"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Content="{TemplateBinding Label}"
                                FontSize="{TemplateBinding LabelFontSize}"
                                Foreground="{TemplateBinding Foreground}" />

                            <StackPanel
                                Grid.Column="1"
                                Grid.ColumnSpan="2"
                                Orientation="Horizontal">
                                <Button
                                    x:Name="Part_CopyButton"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontSize="{TemplateBinding FontSize}"
                                    Foreground="{TemplateBinding Foreground}"
                                    IsTabStop="False">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ShowCopyButton, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" Value="True">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding ShowCopyButton, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" Value="False">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Canvas
                                                Width="20"
                                                Height="20"
                                                Background="{TemplateBinding Background}">
                                                <Path
                                                    x:Name="Part_FrontPage"
                                                    Canvas.Left="6.5"
                                                    Canvas.Top="3.5"
                                                    Data="M3 10C2 10 1 9 1 8V3C1 2 2 1 3 1H6C7 1 8 2 8 3L8 8C8 9 7 10 6 10H3Z"
                                                    Stroke="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}"
                                                    StrokeThickness="2" />
                                                <Path
                                                    x:Name="Part_BackPage"
                                                    Canvas.Left="4.5"
                                                    Canvas.Top="5.5"
                                                    Data="M8 7C8 7 8 7.5 8 8C8 9 7 10 6 10C5 10 5 10 3 10C2 10 1 9 1 8C1 6.5 1 4.5 1 3C1 2 2 1 3 1"
                                                    Stroke="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}"
                                                    StrokeThickness="2" />
                                            </Canvas>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="Part_FrontPage" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                    <Setter TargetName="Part_BackPage" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                                <Button
                                    x:Name="Part_InfoButton"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    FontSize="{TemplateBinding FontSize}"
                                    Foreground="{TemplateBinding Foreground}"
                                    IsTabStop="False">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding InfoText, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" Value="{x:Null}">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding InfoText, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" Value="">
                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Grid>
                                                <Canvas
                                                    Width="20"
                                                    Height="20"
                                                    Background="{TemplateBinding Background}">
                                                    <Ellipse
                                                        x:Name="Part_O"
                                                        Canvas.Left="9"
                                                        Canvas.Top="4"
                                                        Width="2"
                                                        Height="2"
                                                        Stroke="{TemplateBinding BorderBrush}"
                                                        StrokeThickness="2" />
                                                    <Path
                                                        x:Name="Part_I"
                                                        Canvas.Left="8.5"
                                                        Canvas.Top="8"
                                                        Data="M 0,0 H 1.5 V 7"
                                                        Stroke="{TemplateBinding BorderBrush}"
                                                        StrokeStartLineCap="Round"
                                                        StrokeThickness="2" />
                                                    <Path
                                                        x:Name="Part__"
                                                        Canvas.Left="7.5"
                                                        Canvas.Top="15"
                                                        Data="M 0,0 H 5"
                                                        Stroke="{TemplateBinding BorderBrush}"
                                                        StrokeEndLineCap="Round"
                                                        StrokeStartLineCap="Round"
                                                        StrokeThickness="2" />
                                                </Canvas>
                                                <Popup
                                                    x:Name="Part_Popup"
                                                    AllowsTransparency="True"
                                                    Placement="Custom"
                                                    PlacementTarget="{Binding RelativeSource={RelativeSource AncestorType=local:HexTextBox}}"
                                                    StaysOpen="True">
                                                    <Border
                                                        Padding="10,5,10,5"
                                                        Background="{TemplateBinding Background}"
                                                        BorderBrush="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}"
                                                        BorderThickness="{Binding BorderThickness, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}"
                                                        CornerRadius="5">
                                                        <TextBlock
                                                            FontSize="{TemplateBinding FontSize}"
                                                            Foreground="{TemplateBinding Foreground}"
                                                            Text="{Binding InfoText, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                    </Border>
                                                </Popup>
                                            </Grid>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Part_Popup" Property="IsOpen" Value="True" />
                                                    <Setter TargetName="Part_O" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                    <Setter TargetName="Part_I" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                    <Setter TargetName="Part__" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="False">
                                                    <Setter TargetName="Part_Popup" Property="IsOpen" Value="False" />
                                                    <Setter TargetName="Part_O" Property="Stroke" Value="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                    <Setter TargetName="Part_I" Property="Stroke" Value="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                    <Setter TargetName="Part__" Property="Stroke" Value="{Binding BorderBrush, RelativeSource={RelativeSource AncestorType=local:HexTextBox}}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>

                            <PasswordBox
                                x:Name="PART_PasswordBox"
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Margin="10,0,10,5"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                CaretBrush="{TemplateBinding Foreground}"
                                Foreground="{TemplateBinding Foreground}" />

                            <TextBox
                                x:Name="PART_TextBox"
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                Margin="10,0,10,5"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                CaretBrush="{TemplateBinding Foreground}"
                                Foreground="{TemplateBinding Foreground}"
                                Text="{Binding Password, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Visibility="Collapsed" />

                            <ToggleButton
                                x:Name="PART_ToggleButton"
                                Grid.Row="1"
                                Grid.Column="2"
                                Width="36"
                                Height="36"
                                Margin="0"
                                VerticalAlignment="Center"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Cursor="Hand"
                                IsChecked="{Binding IsPasswordVisible, RelativeSource={RelativeSource TemplatedParent}}">

                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Grid>
                                            <Canvas
                                                x:Name="OpenEye"
                                                Width="36"
                                                Height="36"
                                                Background="{TemplateBinding Background}">
                                                <Path
                                                    x:Name="OpenEyePath"
                                                    Canvas.Left="5"
                                                    Canvas.Top="13"
                                                    Data="M1 7C8 -1 18 -1 25 7"
                                                    Stroke="#777777"
                                                    StrokeEndLineCap="Round"
                                                    StrokeStartLineCap="Round"
                                                    StrokeThickness="2" />
                                                <Ellipse
                                                    x:Name="OpenEyeEllipse"
                                                    Canvas.Left="14"
                                                    Canvas.Top="16"
                                                    Width="8"
                                                    Height="8"
                                                    Stroke="#777777"
                                                    StrokeThickness="2" />
                                            </Canvas>
                                            <Canvas
                                                x:Name="CloseEye"
                                                Width="36"
                                                Height="36"
                                                Background="{TemplateBinding Background}"
                                                Visibility="Collapsed">
                                                <Path
                                                    x:Name="CloseEyePath"
                                                    Canvas.Left="5"
                                                    Canvas.Top="17"
                                                    Data="M1 1.00001C8 9 18 9 25 1"
                                                    Stroke="#777777"
                                                    StrokeEndLineCap="Round"
                                                    StrokeStartLineCap="Round"
                                                    StrokeThickness="2" />
                                            </Canvas>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="OpenEye" Property="Visibility" Value="Collapsed" />
                                                <Setter TargetName="CloseEye" Property="Visibility" Value="Visible" />
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="False">
                                                <Setter TargetName="OpenEye" Property="Visibility" Value="Visible" />
                                                <Setter TargetName="CloseEye" Property="Visibility" Value="Collapsed" />
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="OpenEyePath" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexPasswordBox}}" />
                                                <Setter TargetName="OpenEyeEllipse" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexPasswordBox}}" />
                                                <Setter TargetName="CloseEyePath" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexPasswordBox}}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPasswordVisible" Value="True">
                            <Setter TargetName="PART_PasswordBox" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_TextBox" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsPasswordVisible" Value="False">
                            <Setter TargetName="PART_PasswordBox" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_TextBox" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>

                        <Trigger Property="IsKeyboardFocusWithin" Value="False">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="{Binding BorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
