<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:HexControls">

    <Style TargetType="{x:Type local:HexTextBox}">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:HexTextBox}">
                    <Border
                        x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid>
                            <Label
                                x:Name="PART_Label"
                                Padding="5,2,0,0"
                                HorizontalContentAlignment="Left"
                                Content="{TemplateBinding Label}"
                                FontSize="{TemplateBinding LabelFontSize}"
                                Foreground="{TemplateBinding Foreground}" />

                            <TextBox
                                x:Name="PART_TextBox"
                                Margin="10,2,10,5"
                                VerticalAlignment="Bottom"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                CaretBrush="{TemplateBinding Foreground}"
                                Foreground="{TemplateBinding Foreground}"
                                Text="{TemplateBinding Text}" />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>

                        <Trigger Property="IsKeyboardFocusWithin" Value="False">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="{Binding BorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type local:HexPasswordBox}">
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:HexPasswordBox}">
                    <Border
                        x:Name="PART_Border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  Label na primeira linha, ocupando duas colunas  -->
                            <Label
                                x:Name="PART_Label"
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Padding="5,2,0,0"
                                HorizontalContentAlignment="Left"
                                Content="{TemplateBinding Label}"
                                FontSize="{TemplateBinding LabelFontSize}"
                                Foreground="{TemplateBinding Foreground}" />

                            <!--  PasswordBox e TextBox na segunda linha, primeira coluna  -->
                            <PasswordBox
                                x:Name="PART_PasswordBox"
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="10,0,10,5"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                CaretBrush="{TemplateBinding Foreground}"
                                Foreground="{TemplateBinding Foreground}"/>

                            <TextBox
                                x:Name="PART_TextBox"
                                Grid.Row="1"
                                Grid.Column="0"
                                Margin="10,0,10,5"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="0"
                                CaretBrush="{TemplateBinding Foreground}"
                                Foreground="{TemplateBinding Foreground}"
                                Text="{Binding Password, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                Visibility="Collapsed" />

                            <!--  ToggleButton na segunda linha, segunda coluna  -->
                            <ToggleButton
                                x:Name="PART_ToggleButton"
                                Grid.Row="1"
                                Grid.Column="1"
                                Margin="0,0,10,0"
                                VerticalAlignment="Center"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                Cursor="Hand"
                                IsChecked="{Binding IsPasswordVisible, RelativeSource={RelativeSource TemplatedParent}}">

                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Grid>
                                            <!--  Olho aberto  -->
                                            <Canvas
                                                x:Name="OpenEye"
                                                Width="36"
                                                Height="36"
                                                Background="{TemplateBinding Background}">
                                                <Path
                                                    x:Name="OpenEyePath"
                                                    Canvas.Left="5"
                                                    Canvas.Top="13"
                                                    Data="M1 7C8 -1 18 -1 25 7"
                                                    Stroke="#777777"
                                                    StrokeEndLineCap="Round"
                                                    StrokeStartLineCap="Round"
                                                    StrokeThickness="2" />
                                                <Ellipse
                                                    x:Name="OpenEyeEllipse"
                                                    Canvas.Left="14"
                                                    Canvas.Top="16"
                                                    Width="8"
                                                    Height="8"
                                                    Stroke="#777777"
                                                    StrokeThickness="2" />
                                            </Canvas>

                                            <!--  Olho fechado  -->
                                            <Canvas
                                                x:Name="CloseEye"
                                                Width="36"
                                                Height="36"
                                                Background="{TemplateBinding Background}"
                                                Visibility="Collapsed">
                                                <Path
                                                    x:Name="CloseEyePath"
                                                    Canvas.Left="5"
                                                    Canvas.Top="17"
                                                    Data="M1 1.00001C8 9 18 9 25 1"
                                                    Stroke="#777777"
                                                    StrokeEndLineCap="Round"
                                                    StrokeStartLineCap="Round"
                                                    StrokeThickness="2" />
                                            </Canvas>
                                        </Grid>

                                        <!--  Triggers controlando visibilidade e hover  -->
                                        <ControlTemplate.Triggers>
                                            <!--  alterna entre olho aberto/fechado  -->
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="OpenEye" Property="Visibility" Value="Collapsed" />
                                                <Setter TargetName="CloseEye" Property="Visibility" Value="Visible" />
                                            </Trigger>
                                            <Trigger Property="IsChecked" Value="False">
                                                <Setter TargetName="OpenEye" Property="Visibility" Value="Visible" />
                                                <Setter TargetName="CloseEye" Property="Visibility" Value="Collapsed" />
                                            </Trigger>

                                            <!--  hover: muda cor dos strokes  -->
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="OpenEyePath" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexPasswordBox}}" />
                                                <Setter TargetName="OpenEyeEllipse" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexPasswordBox}}" />
                                                <Setter TargetName="CloseEyePath" Property="Stroke" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource AncestorType=local:HexPasswordBox}}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsPasswordVisible" Value="True">
                            <Setter TargetName="PART_PasswordBox" Property="Visibility" Value="Collapsed" />
                            <Setter TargetName="PART_TextBox" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsPasswordVisible" Value="False">
                            <Setter TargetName="PART_PasswordBox" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PART_TextBox" Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="{Binding FocusBorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>

                        <Trigger Property="IsKeyboardFocusWithin" Value="False">
                            <Setter TargetName="PART_Border" Property="BorderBrush" Value="{Binding BorderBrush, RelativeSource={RelativeSource TemplatedParent}}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

